<div class="row">
        <div class="col-md-4">
                <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
        </div>
        <div class="col-md-8">
                 <%= @book.title %>
                <%= @book.author %>
                <%= @book.description %>
        </div>
</div>
<div class="row">
        <div class="col-md-4">
        </div>
</div>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Sure?"} %>
<% end %>