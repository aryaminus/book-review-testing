<div class="row">
        <div class="col-md-4">
                <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
        </div>
        <div class="col-md-8">
                 <%= @book.title %>
                <%= @book.author %>
                Average rating
                <div class="average-review-rating" data-score=<%= @average_review %>></div>
                <%= @book.description %>
        </div>
</div>
<div class="row">
        <div class="col-md-4">
        <%= render @book.reviews %>
        <div>
                <%= link_to "Add Review", new_book_review_path(@book) %>
        </div>

        </div>
</div>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Sure?"} %>
<% end %>

<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>

<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>

